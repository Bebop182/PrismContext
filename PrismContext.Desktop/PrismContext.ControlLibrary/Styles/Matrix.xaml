<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customItemsControls="clr-namespace:PrismContext.ControlLibrary.CustomItemsControls"
                    xmlns:customPanels="clr-namespace:PrismContext.ControlLibrary.CustomPanels">
    
    <Style x:Key="{x:Type customItemsControls:MatrixN2}" TargetType="{x:Type customItemsControls:MatrixN2}" BasedOn="{StaticResource {x:Type ListBox}}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <customPanels:SizedCanvas />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>