<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ic="clr-namespace:PrismContext.ControlLibrary.CustomItemsControls"
                    xmlns:converters="clr-namespace:PrismContext.ControlLibrary.Converters">

    <Style x:Key="{x:Type ic:OrganizationTree}" TargetType="{x:Type ic:OrganizationTree}" BasedOn="{StaticResource {x:Type TreeView}}">
        <Style.Resources>
            <converters:InvertOrientationConverter x:Key="InvertOrientationConverter" />
        </Style.Resources>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Name="MainPanel" 
                                Orientation="{Binding Path=Orientation, Converter={StaticResource InvertOrientationConverter}, RelativeSource={RelativeSource AncestorType=ic:OrganizationTree}}">
                    </StackPanel>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>